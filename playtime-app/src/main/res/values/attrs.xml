<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircularProgress">
        <attr name="circular_radius" format="dimension"/>

        <attr name="circular_progress" format="integer"/>
        <attr name="circular_max" format="integer"/>
        <attr name="circular_start_angle" format="integer"/>

        <attr name="circular_unfinished_color" format="color"/>
        <attr name="circular_finished_color" format="color"/>

        <attr name="circular_finished_stroke_width" format="dimension"/>
        <attr name="circular_unfinished_stroke_width" format="dimension"/>

        <attr name="circular_text_size" format="dimension"/>
        <attr name="circular_text_color" format="color"/>

        <attr name="circular_prefix_text" format="string"/>
        <attr name="circular_suffix_text" format="string"/>

        <attr name="circular_background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="progressIndeterminate" format="boolean" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="float" />
        <attr name="barSpinCycleTime" format="integer" />
        <attr name="circleRadius" format="dimension" />
        <attr name="fillRadius" format="boolean" />
        <attr name="barWidth" format="dimension" />
        <attr name="linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="icon" format="reference" />
        <attr name="button_text" format="string" />
        <attr name="button_text_size" format="integer" />
        <attr name="button_text_color" format="color" />
    </declare-styleable>

</resources> 